# Production Environment Variables for Django Boards
# Copy this file to .env.prod and fill in the actual values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=.0.0.0.0,.127.0.0.1

# Database Configuration
DATABASE_NAME=django_boards_prod
DATABASE_USERNAME=django_user
DATABASE_PASSWORD=database-password

DATABASE_URL=postgres://django_user:database-password@db:5432/django_boards_prod

# GitHub Container Registry
GITHUB_REPOSITORY=your-username/django-boards

# Nginx Configuration
NGINX_PORT=80

# Optional: Webhook for deployment notifications
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: Email Configuration (for Django)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# EMAIL_USE_TLS=True
